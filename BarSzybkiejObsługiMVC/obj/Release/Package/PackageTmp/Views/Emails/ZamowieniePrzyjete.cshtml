
@* POSTAL MAILING *@

@model BarSzybkiejObsługiMVC.ViewModels.ZamowieniePrzyjete

To: @Model.Zamowienie.Email
From: lolcats@website.com
Subject: Bar szybkiej obsługi - Zamowienie zostało przyjęte!


@{
    Layout = null;
}

<!DOCTYPE html>
@* Using Postal Library *@
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Potwierdzenie</title>
</head>
<body>
        <h3>
            Twoje zamówienie zostało przyjęte.
        </h3>
    <table style="border-spacing: 0; border-collapse: collapse;text-align:center;margin-top:20px;margin-bottom:20px">
        <tr style="background-color:#f9f9f9">
            <td><b>Produkt</b></td>
            <td style="margin:10px"><b>Ilosc</b></td>
            <td><b>Cena za sztukę</b></td>
        </tr>
        @foreach (var item in Model.Zamowienie.PozycjeKoszyka)
        {
            <tr>
                <td><b>@item.Produkt.NazwaProduktu</b></td>
                <td style="padding:10px"><b>@item.Ilosc</b></td>
                <td><b>@item.Wartosc zł</b></td>
            </tr>
        }
    </table>
    <div>
        Przewidywany termin przygotowania zamówienia: <b>@Model.Zamowienie.NaKiedy </b>
    </div>
    <div>
        Kwota do zapłaty: <b>@Model.Zamowienie.WartoscZamowienia</b>
    </div>
    <div>
        Typ płatności: <b>@Model.Zamowienie.TypPlatnosci</b>
    </div>
    <div>
        Kod zamówienia: <b>@Model.Zamowienie.KodZamowienia </b>
    </div>

    <h3>Dziękujemy!</h3>
</body>
</html>

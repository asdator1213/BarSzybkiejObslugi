@model BarSzybkiejObsługiMVC.Models.Zamowienie

@{
    ViewBag.Title = "Szczegoly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h2 class="col-md-6">Zamówienie # @Model.ZamowienieId</h2>
    <h2 class="col-md-6">Wartość zamówienia: @Model.Platnosc.Kwota zł</h2>
</div>

<div class="row">
    <h3 class="col-md-6">Kod: @Model.KodZamowienia</h3>
    <div class="col-md-6">
        <div class="row">
            <h4 class="col-md-6">Stan zamówienia: @Model.StanZamowienia</h4>
            <div class="col-md-6">
                @Html.ActionLink("Zmień status", "Status", "Zamowienia", new { id = Model.ZamowienieId }, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Zawartość zamówienia</h3>
        <table class="table table-striped">
            <tr>
                <th>Produkt</th>
                <th>Ilosc</th>
                <th>Cena za sztukę</th>
                <th></th>
            </tr>
            @foreach (var item in Model.PozycjeZamowienia)
            {
                <tr>
                    <td>@item.Produkt.NazwaProduktu</td>
                    <td>@item.Ilosc</td>
                    <td>@item.Produkt.Cena zł</td>
                    <td>@Html.ActionLink("Usuń", "UsuńProdukt", "Zamowienia", new { zamowienieId = Model.ZamowienieId, produktId = item.ProduktId }, new { @class = "btn btn-danger" })</td>
                </tr>
            }

        </table>
        <h4>Komentarz: @Html.TextAreaFor(model => model.Komentarz, new { @class = "form-control" })</h4>
    </div>
    <div class="col-md-6">
        <div class="row">
            <h3>Dane klienta</h3>
            <div class="col-md-6">

                <h4>Imię: @Html.TextBoxFor(model => model.Klient.Imie, new { @class = "form-control" })</h4>
                <h4>Numer kontaktowy: @Html.TextBoxFor(model => model.Klient.Telefon, new { @class = "form-control" })</h4>
            </div>
            <div class="col-md-6">
                <h4>Nazwisko: @Html.TextBoxFor(model => model.Klient.Nazwisko, new { @class = "form-control" })</h4>
                <h4>Adres e-mail: @Html.TextBoxFor(model => model.Klient.Email, new { @class = "form-control" })</h4>
            </div>
        </div>
        <center><h3>Planowany termin odbioru: @Html.TextBoxFor(model => model.NaKiedy, new { @class = "form-control" })</h3></center>
    </div>

    <center>@Html.ActionLink("Zapisz", "Termin", "Zamowienia", new { id = Model.ZamowienieId }, new { @class = "btn btn-info" })</center>
    <center>@Html.ActionLink("Powrót", "Index", "Zamowienia", null, new { @class = "btn btn-warning" })</center>
</div>

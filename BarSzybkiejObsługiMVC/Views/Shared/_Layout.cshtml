@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bar szybkiej obsługi</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")   
    <link href="~/Content/jquery.datetimepicker.min.css" rel="stylesheet" />

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script>
        $(function () {
            // Check the initial Poistion of the Sticky Header
            var stickyHeaderTop = $('#stickyheader').offset().top;

            $(window).scroll(function () {
                if ($(window).scrollTop() > stickyHeaderTop) {
                    $('#stickyheader').css({ position: 'fixed', top: '0px', width: '100%' });
                    $('#stickyheader').css('z-index', 3000);
                    $('#stickyalias').css('display', 'block');
                    $('#category-bar').hide();
                } else {
                    $('#stickyheader').css({ position: 'static', top: '0px', width: '100%' });
                    $('#stickyalias').css('display', 'none');
                    $('#category-bar').show();
                }
            });
        });
    </script>
</head>
<body>
    <header>
        <a href="@Url.Action("Index", "Home")"><img src="~/Content/Images/banner.png" /></a>
    </header>
    <nav>
        <ul class="topnav" id="stickyheader">
            <li>
                @Html.ActionLink("Danie obiadowe", "ListaProduktow", "Kategorie", new { kategoria = "Danie obiadowe" }, null)
            </li>
            <li>
                @Html.ActionLink("Fast food", "ListaProduktow", "Kategorie", new { kategoria = "Fast food" }, null)
            </li>
            <li>
                @Html.ActionLink("Przystawka", "ListaProduktow", "Kategorie", new { kategoria = "Przystawka" }, null)
            </li>
            <li>
                @Html.ActionLink("Napoje", "ListaProduktow", "Kategorie", new { kategoria = "Napoje" }, null)
            </li>
            <li class="koszyk">
                @{
                    if (!Request.IsAuthenticated)
                    {
                        <a href="@Url.Action("Index", "Koszyk")">Koszyk (<span id="koszyk-ilosc-pozycji">@Html.Action("PobierzIloscElementowKoszyka", "Koszyk")</span>)</a>
                    }
                    else
                    {
                        @Html.Partial("_LoginPartial")
                    }
                }
            </li>
        </ul>
    </nav>
    <div id="stickyalias"></div>

    <div class="container body-content tiny-container">
        <hr />
        @RenderBody()
        <hr />
        <br />
        <br />
    </div>
    <footer>
        <div class="container footer-container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <ul class="adress">
                        <span>Dane kontaktowe:</span>
                        <li>
                            <p>Lorem ipsum dolor sit amet, vero omnis vocibus</p>
                        </li>
                        <li>
                            <p>+90 1234 56789</p>
                        </li>
                        <li>
                            <p>info@gmail.com</p>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <ul class="contact">
                        <span>Przydatne linki</span>
                        <li>
                            <a href="#">Home</a>
                        </li>
                        <li>
                            <a href="#">About</a>
                        </li>
                        <li>
                            <a href="#">Blog</a>
                        </li>
                        <li>
                            <a href="#">Gallery </a>
                        </li>
                        <li>
                            <a href="#">Contact</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <ul class="contact">
                        <span>Wpisy</span>
                        <li>
                            <a href="#">Blog 1</a>
                        </li>

@model BarSzybkiejObsługiMVC.ViewModels.ZamowienieViewModel
@{
    ViewBag.Title = "PotwierdzenieZamowienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <h2 style="margin-bottom: 20px">Zamówienie zostało przyjęte do realizacji!</h2>
</center>
<div class="row">
    <div class="col-md-6">
        <h3>Numer twojego zamówienia to: @Model.ZamowienieId</h3>
        <h5 style="margin-top: 20px;">Stan Twojego zamówienia: @Model.StanZamowienia</h5>
        <h5>Przybliżony czas przygotowania: @Model.CzasOczekiwania minut</h5>
        <h5>Metoda płatności: @Model.TypPlatnosci</h5>

        <h5>Do odbioru: @Model.NaKiedy</h5>


        <center><h3>Na twój adres e-mail zostało wysłane potwierdzenie zamówienia.</h3></center>
    </div>
    <div class="col-md-6">
        <h3>Twoje zamówienie:</h3>
        <div style="margin-top: 20px">
            <p>Imię: @Model.Imie</p>
            <p>Nazwisko: @Model.Nazwisko</p>
            <p>Nr kontaktowy: @Model.Telefon</p>
            <p>Adres e-mail: @Model.Email</p>
        </div>

        <table class="table table-striped" style="margin-top: 20px">
            <tr>
                <th>Produkt</th>
                <th>Ilosc</th>
                <th>Cena za sztukę</th>
            </tr>
            @foreach (var item in Model.PozycjeKoszyka)
            {
                <tr>
                    <td>@item.Produkt.NazwaProduktu</td>
                    <td>@item.Ilosc</td>
                    <td>@item.Produkt.Cena zł</td>
                </tr>
            }   
        </table>

        <h3>Kwota do zapłaty: @Model.WartoscZamowienia zł</h3>
        <h3>Kod Twojego zamówienia: @Model.KodZamowienia</h3>
    </div>
</div>
@Html.ActionLink("Powrót do strony głównej", "Index", "Home", null, new { @class = "btn btn-warning" })

